{
  "station_info": {
    "station_name": "greenhouse-base",
    "station_id": 1
  },
  "services": {
    "adafruit_io_enabled": false,
    "lora_enabled": true
  },
  "timing": {
    "transmission_interval_seconds": 30,
    "adafruit_io_interval_seconds": 300
  },
  "database": {
    "drive_label": "WSS"
  },
  "lora": {
    "role": "base",
    "frequency": 915.0,
    "tx_power": 23,
    "base_station_address": 1
  },
  "sensors": {
    "1": {
      "name": "soil",
      "enabled": true,
      "polling_rate": 600,
      "metrics": {
        "moisture-rh": {
          "register": 1,
          "decimals": 1,
          "label": "Soil Moisture",
          "unit": "%RH",
          "feed_key": "soil-moisture"
        },
        "temp-c": {
          "register": 0,
          "decimals": 1,
          "signed": true,
          "label": "Soil Temperature",
          "unit": "°C",
          "feed_key": "soil-temp"
        }
      }
    },
    "2": {
      "name": "atmosphere",
      "enabled": true,
      "polling_rate": 600,
      "metrics": {
        "humidity-rh": {
          "register": 0,
          "decimals": 1,
          "label": "Humidity",
          "unit": "%RH",
          "feed_key": "humidity"
        },
        "temp-c": {
          "register": 1,
          "decimals": 1,
          "signed": true,
          "label": "Air Temperature",
          "unit": "°C",
          "feed_key": "air-temp"
        }
      }
    }
  },
  "rain_gauge": {
    "name": "rain",
    "enabled": false,
    "gpio_pin": 17,
    "mm_per_tip": 0.5,
    "debounce_ms": 250,
    "metric": "mm",
    "label": "Rainfall",
    "unit": "mm",
    "feed_key": "rain"
  }
}
