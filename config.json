{
  "station_info": {
    "station_name": "greenhouse-remote",
    "station_id": 2
  },
  "services": {
    "adafruit_io_enabled": false,
    "lora_enabled": true
  },
  "timing": {
    "transmission_interval_seconds": 60,
    "adafruit_io_interval_seconds": 300,
    "lora_time_sync_interval_seconds": 3600
  },
  "database": {
    "drive_label": "WSS"
  },
  "lora": {
    "role": "remote",
    "device": "/dev/ttyS0",
    "frequency": 915.0,
    "tx_power": 23
  },
  "sensors": {
    "1": {
      "name": "soil",
      "enabled": true,
      "polling_rate": 10,
      "metrics": {
        "moisture-rh": {
          "register": 0,
          "decimals": 0,
          "correction": {
            "type": "map",
            "raw_min": 310,
            "raw_max": 780
          },
          "feed_key": "soil-moisture-rh",
          "label": "Soil Moisture",
          "unit": "%RH"
        },
        "temp-c": {
          "register": 1,
          "decimals": 1,
          "signed": true,
          "correction": {
            "type": "linear",
            "offset": 0.5
          },
          "feed_key": "soil-temp-c",
          "label": "Soil Temperature",
          "unit": "\u00c2\u00b0C"
        }
      }
    },
    "2": {
      "name": "atmosphere",
      "enabled": true,
      "polling_rate": 10,
      "metrics": {
        "humidity-rh": {
          "register": 0,
          "decimals": 1,
          "correction": {
            "type": "linear",
            "offset": -5.0
          },
          "feed_key": "atmosphere-humidity-rh",
          "label": "Humidity",
          "unit": "%RH"
        },
        "temp-c": {
          "register": 1,
          "decimals": 1,
          "signed": true,
          "correction": {
            "type": "linear",
            "offset": -1.1
          },
          "feed_key": "atmosphere-temp-c",
          "label": "Air Temperature",
          "unit": "\u00c2\u00b0C"
        }
      }
    },
    "3": {
      "name": "co2",
      "polling_rate": 10,
      "enabled": true,
      "metrics": {
        "ppm": {
          "register": 0,
          "decimals": 0,
          "correction": {},
          "feed_key": "co2-ppm",
          "label": "CO2",
          "unit": "ppm"
        }
      }
    },
    "4": {
      "name": "light",
      "polling_rate": 30,
      "enabled": true,
      "metrics": {
        "lux": {
          "register": 0,
          "function": "read_long",
          "correction": {
            "type": "linear",
            "factor": 1.25
          },
          "feed_key": "light-lux",
          "label": "Light Level",
          "unit": "lux"
        }
      }
    },
    "5": {
      "name": "pressure",
      "polling_rate": 900,
      "enabled": true,
      "metrics": {
        "kpa": {
          "register": 0,
          "decimals": 3,
          "correction": {
            "type": "linear",
            "factor": 0.001
          },
          "feed_key": "pressure-kpa",
          "label": "Pressure",
          "unit": "kPa"
        },
        "temp-c": {
          "register": 1,
          "decimals": 1,
          "signed": true,
          "correction": {},
          "feed_key": "pressure-temp-c",
          "label": "Baro Temperature",
          "unit": "\u00c2\u00b0C"
        }
      }
    },
    "6": {
      "name": "wind-direction",
      "polling_rate": 120,
      "enabled": true,
      "metrics": {
        "direction": {
          "register": 0,
          "decimals": 0,
          "correction": {},
          "feed_key": "wind-direction",
          "label": "Wind Direction",
          "unit": "\u00c2\u00b0"
        }
      }
    },
    "7": {
      "name": "wind-speed",
      "polling_rate": 120,
      "enabled": true,
      "metrics": {
        "speed-ms": {
          "register": 1,
          "decimals": 1,
          "correction": {},
          "feed_key": "wind-speed-ms",
          "label": "Wind Speed",
          "unit": "m/s"
        }
      }
    }
  },
  "rain_gauge": {
    "name": "rain",
    "enabled": false,
    "gpio_pin": 17,
    "mm_per_tip": 0.2765,
    "debounce_ms": 250,
    "metric": "mm",
    "feed_key": "rain-mm",
    "label": "Rainfall",
    "unit": "mm"
  }
}